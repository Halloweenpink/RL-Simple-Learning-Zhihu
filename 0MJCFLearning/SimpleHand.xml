<mujoco model="simple_hand">
  <compiler angle="degree" autolimits="true"/>

  <option timestep="0.002"/>

  <worldbody>
    <!-- 手掌 -->
    <body name="palm" pos="0 0 0">
      <geom type="box" size="0.08 0.05 0.01" rgba="0.7 0.7 0.7 1"/>

      <!-- === 五根手指，每根 2 关节 === -->

      <!-- Finger 1 -->
      <body name="finger1_base" pos="0.08 0.03 0">
<!--        axis是一个法向量，假如这样就有倒进去-->
<!--        <joint name="f1_j1" type="hinge" axis="0 1 0" range="-90 90"/>-->
        <joint name="f1_j1" type="hinge" axis="0 1 0" range="0 90"/>
        <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="1 0 0 1"/>
        <body pos="0 0 0.04">
          <joint name="f1_j2" type="hinge" axis="0 1 0" range="0 90"/>
          <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="1 0.2 0.2 1"/>
        </body>
      </body>

      <!-- Finger 2 -->
      <body name="finger2_base" pos="0.08 0.01 0">
        <joint name="f2_j1" type="hinge" axis="0 1 0" range="0 90"/>
        <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="0 1 0 1"/>
        <body pos="0 0 0.04">
          <joint name="f2_j2" type="hinge" axis="0 1 0" range="0 90"/>
          <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="0.2 1 0.2 1"/>
        </body>
      </body>

      <!-- Finger 3 -->
      <body name="finger3_base" pos="0.08 -0.01 0">
        <joint name="f3_j1" type="hinge" axis="0 1 0" range="0 90"/>
        <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="0 0 1 1"/>
        <body pos="0 0 0.04">
          <joint name="f3_j2" type="hinge" axis="0 1 0" range="0 90"/>
          <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="0.2 0.2 1 1"/>
        </body>
      </body>

       Finger 4
      <body name="finger4_base" pos="0.08 -0.03 0">
        <joint name="f4_j1" type="hinge" axis="0 1 0" range="0 90"/>
        <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="1 1 0 1"/>
        <body pos="0 0 0.04">
          <joint name="f4_j2" type="hinge" axis="0 1 0" range="0 90"/>
          <geom type="capsule" size="0.005 0.02" fromto="0 0 0 0 0 0.04" rgba="1 1 0.2 1"/>
        </body>
      </body>

<!--       Thumb-->
      <body name="thumb_base" pos="0 0.05 0">
        <joint name="t_j1" type="hinge" axis="1 0 0" range="0 90"/>
        <geom type="capsule" size="0.005 " fromto="0 0 0 0.04 0 0.04" rgba="1 0.5 0 1"/>
        <body pos="0.04 0 0.04">
          <joint name="t_j2" type="hinge" axis="1 0 0" range="0 90"/>
          <geom type="capsule" size="0.005" fromto="0 0 0 0.04 0 0.04" rgba="1 0.7 0.2 1"/>
        </body>
      </body>


    </body>
  </worldbody>

  <actuator>
<!--     为每个关节添加 motor-->
    <motor joint="f1_j1" ctrlrange="0 1"/>
    <motor joint="f1_j2" ctrlrange="0 1"/>

    <motor joint="f2_j1" ctrlrange="0 1"/>
    <motor joint="f2_j2" ctrlrange="0 1"/>

    <motor joint="f3_j1" ctrlrange="0 1"/>
    <motor joint="f3_j2" ctrlrange="0 1"/>

    <motor joint="f4_j1" ctrlrange="0 1"/>
    <motor joint="f4_j2" ctrlrange="0 1"/>

    <motor joint="t_j1" ctrlrange="0 1"/>
    <motor joint="t_j2" ctrlrange="0 1"/>
  </actuator>

</mujoco>
